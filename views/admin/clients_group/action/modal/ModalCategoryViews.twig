<div class="modal" tabindex="-1" role="dialog" id="confirmModalCategory">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-users"></i> Nouvelle réduction par catégorie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-left">
                <div class="form-group col-lg-12">
                    <ul id="tree">
                        {% set pos_nright = 0 %}
                        {% for tree in category %}
                            <li class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" id="{{ tree.id_category }}" name="id_category" value="{{ tree.id_category }}"{% if objet and objet.id_category == tree.id_category %} checked{% endif %}>
                                <label class="custom-control-label" for="{{ tree.id_category }}">{{ tree.name }}{% if tree.id_category in remise_cat|keys %} > {{ remise_cat[tree.id_category] }} %{% endif %}</label>

                                {% include './admin/global/action/CategoryTree.twig' %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="row form-group col-lg-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Réduction</span>
                        </div>
                        <input type="text" name="reduction_id_category" class="form-control" value="0.00">
                        <div class="input-group-append">
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-themes" id="confirmModalCategoryYes">Ajouter</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>