<div class="modal" tabindex="-1" role="dialog" id="confirmModalFabricant">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-users"></i> Nouvelle réduction par fabricant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group col-lg-12">
                    <select id="id_manufacturer" class="form-control" name="id_manufacturer">
                        <option value="">-- Choisir --</option>
                        {% for fabricant in manufacturer %}
                            <option value="{{ fabricant.id_manufacturer }}">{{ fabricant.name }}{% if fabricant.id_manufacturer in remise_fab|keys %} > {{ remise_fab[fabricant.id_manufacturer] }} %{% endif %}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="row form-group col-lg-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Réduction</span>
                        </div>
                        <input type="text" name="reduction_id_manufacturer" class="form-control" value="0.00">
                        <div class="input-group-append">
                            <span class="input-group-text">%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-themes" id="confirmModalFabricantYes">Ajouter</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>