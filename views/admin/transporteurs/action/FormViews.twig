<div class="row">
    {% include './admin/global/views/ModalViews.twig' %}
    <div class="col-xl-3 col-lg-3 col-md-12">
        <div id="list-tab" class="list-group" role="tablist">
            {% for form, menu in sub_menu %}
                <a href="#{{ form }}" class="list-group-item list-group-item-action {% if sub_menu|first == menu %}active{% endif %}" data-toggle="list" role="tab">
                    {{ menu }}
                </a>
            {% endfor %}
        </div>
    </div>
    <form action="" method="post" enctype="multipart/form-data" id="formContent" class="col-xl-9 col-lg-9 col-md-12 mt-3 mt-lg-0">
        <div class="tab-content">
            {% for form, menu in sub_menu %}
                <div id="{{ form }}" class="tab-pane {% if sub_menu|first == menu %}active{% endif %}" role="tabpanel">
                    {% include './admin/'~table~'/action/form/Form'~form~'Views.twig' %}
                </div>
            {% endfor %}
        </div>
        <div class="row margin-submit-form">
            <div class="col-lg-12 col-lg-offset-4">
                <button type="submit" name="{{ name_action|lower }}_{{ table }}" value="true" class="col-lg-4 btn btn-themes">{{ name_action }}</button>
            </div>
        </div>
    </form>
</div>