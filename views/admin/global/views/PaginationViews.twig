{% if nb_pagination > 1 and nb_pagination >= page %}
    <div class="col-lg-12 row justify-content-center page-footer">
        <ul class="pagination">
            {% if page != 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ link_pagination ~ (page -1) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            {% endif %}

            {% if page > 3 %}
                <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            {% endif %}

            {% for pagination in p_start..p_end %}
                <li class="page-item {% if page == pagination %}active{% endif %}">
                    <a class="page-link" href="{{ link_pagination ~ pagination }}">{{ pagination }}</a>
                </li>
            {% endfor %}

            {% if nb_pagination > page+3 %}
                <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            {% endif %}

            {% if nb_pagination > page+2 %}
                <li class="page-item"><a class="page-link" href="{{ link_pagination ~ nb_pagination }}">{{ nb_pagination }}</a></li>
            {% endif %}

            {% if page != nb_pagination %}
                <li class="page-item">
                    <a class="page-link" href="{{ link_pagination ~ (page +1) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}