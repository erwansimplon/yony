{% include './admin/commandes/action/modal/ModalAddressViews.twig' %}

<div id="formContent" class="container-fluid">
    <form action="" method="post" id="formOrder" enctype="multipart/form-data">
        <input type="hidden" value="" id="id_cart" name="id_cart">
        <div class="row form-group" id="search_client">
            <label for="inputSearchClient" class="control-label col-lg-4 margin-auto text-center">Client</label>
            <div class="col-lg-8 row">
                <div class="col-md-12 col-lg-6 col-xl-7 mb-3 mb-lg-0">
                    <input type="text" name="client" id="inputSearchClient" class="form-control" required>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <button type="button" id="searchClient" class="col-12 btn btn-themes">Rechercher</button>
                </div>
            </div>
        </div>
        <div class="row form-group" id="view_search_customer">

        </div>

        <div id="panier" class="card form-group col-12">
            <div class="card-header text-left"><i class="fa fa-shopping-cart"></i> Panier</div>
            <div class="card-body">
                <div class="row form-group" id="search_product">
                    <div class="input-group">
                        <label for="inputSearchProduct" class="control-label col-lg-4 margin-auto text-center">Rechercher un produit</label>
                        <input type="text" class="form-control" id="inputSearchProduct">
                        <div class="input-group-append">
                            <button type="button" id="btnProduct" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="row form-group" id="view_search_product">

                </div>
                <div class="row form-group" id="view_shopping_cart">

                </div>
            </div>
        </div>

        <div id="address" class="card form-group col-12">
            <div class="card-header text-left"><i class="fa fa-street-view"></i> Adresse</div>
            <div class="card-body row form-group">
                <div id="delivery" class="card col-md-12 col-lg-5 mb-3 mb-lg-0 text-left">
                    <div class="card-header text-left">
                        <div class="hearder_align_button">
                            <i class="middle_screen fa fa-truck"></i> Livraison
                        </div>
                        <button id="button_delivery" class="btn btn-themes float-right"></button>
                    </div>
                    <div id="address_delivery" class="card-body"></div>
                </div>
                <div id="invoice" class="card col-md-12 col-lg-5 text-left">
                    <div class="card-header text-left">
                        <div class="hearder_align_button">
                            <i class="middle_screen fa fa-archive"></i> Facturation
                        </div>
                        <button id="button_invoice" class="btn btn-themes float-right"></button>
                    </div>
                    <div id="address_invoice" class="card-body"></div>
                </div>
            </div>
        </div>

        <div id="carrier" class="card form-group col-12">
            <div class="card-header text-left"><i class="fa fa-truck"></i> Transport</div>
            <div class="card-body row form-group">
                <label for="delivery_option" class="control-label col-lg-3 margin-auto">Mode de livraison</label>
                <select name="delivery_option" id="delivery_option" class="form-control col-lg-9 margin-auto">

                </select>
            </div>
        </div>

        <div id="summary" class="card form-group col-12">
            <div class="card-header text-left"><i class="fa fa-bars"></i> RÃ©capitulatif</div>
            <div class="card-body">
                <div id="summary_content" class="row form-group">

                </div>
                <div id="message_part" class="row clear_padding form-group col-12">
                    <label class="control-label clear_padding col-lg-3 margin-auto" for="order_message">Message de la commande</label>
                    <div class="col-lg-9 clear_padding">
                        <textarea name="order_message" id="order_message" class="form-control" rows="3" cols="45" maxlength="255"></textarea>
                    </div>
                </div>
                <div id="payment_part" class="row clear_padding form-group col-12">
                    <label class="control-label clear_padding col-lg-3 margin-auto" for="payment">Paiement</label>
                    <div class="col-lg-9 clear_padding">
                        <select id="payment" class="form-control" name="id_payment">
                        </select>
                    </div>
                </div>
                <div id="statut_part" class="row clear_padding col-12">
                    <label class="control-label clear_padding col-lg-3 margin-auto" for="current_state">Statut de la commande</label>
                    <div class="col-lg-9 clear_padding">
                        <select id="current_state" class="form-control" name="current_state">
                            {% for statut in list_statut %}
                                <option value="{{ statut.id_order_state }}">{{ statut.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div id="submit_order" class="row margin-submit-form">
            <div class="col-lg-12 col-lg-offset-4">
                <button type="submit" name="{{ name_action|lower }}_{{ table }}" value="true" class="col-lg-4 btn btn-themes">{{ name_action }}</button>
            </div>
        </div>
    </form>
</div>