<div class="modal" tabindex="-1" role="dialog" id="confirmModalPromo">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouveau prix spécifique</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row form-group col-lg-12" id="search_client">
                    <label for="inputSearchClient" class="control-label col-lg-4 margin-auto text-center">Client</label>
                    <div class="col-lg-8 row">
                        <div class="col-md-12 col-lg-6 col-xl-7 mb-3 mb-lg-0">
                            <input type="text" name="client" id="inputSearchClient" class="form-control" placeholder="Tous les clients">
                        </div>
                        <div class="col-md-12 col-lg-6 col-xl-5">
                            <button type="button" id="searchClient" class="col-12 btn btn-themes">Rechercher</button>
                        </div>
                    </div>
                </div>
                <div class="row form-group col-lg-12" id="view_search_customer">

                </div>
                <div class="row form-group col-lg-12">
                    <label for="selectIdGroup" class="control-label col-lg-4 margin-auto text-center">Groupe de client</label>
                    <div class="col-lg-8 row">
                        <select id="selectIdGroup" class="form-control" name="id_group_client">
                            <option value="">-- Tous les groupes --</option>
                            {% for group in group_client %}
                                <option value="{{ group.id_group }}">{{ group.name_group }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="form-group col-lg-6">
                        <div class="input-group">
                            <input type="text" id="date_from" name="date_from" class="form-control" placeholder="Du" aria-describedby="date_from_append" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text" id="date_from_append"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <div class="input-group">
                            <input type="text" id="date_to" name="date_to" class="form-control" placeholder="Au" aria-describedby="date_to_append" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text" id="date_to_append"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group col-lg-12">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="prependReduction">Réduction</span>
                        </div>
                        <input type="text" name="remise_id_product" class="form-control" value="0.00">
                        <div class="input-group-append">
                            <select id="selectTypeRemise" class="form-control" name="remise_type">
                                <option value="remise">%</option>
                                <option value="prix_net_ht">€ HT</option>
                                <option value="prix_net_ttc">€ TTC</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-themes" id="confirmModalPromoYes">Ajouter</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>