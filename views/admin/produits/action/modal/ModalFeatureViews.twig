<div class="modal" tabindex="-1" role="dialog" id="confirmModalFeature">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajout d'une caractéristique</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if list_feature %}
                    <div class="col-lg-12">
                        <label for="list_feature">Caractéristique déjà créé</label>
                        <select id="list_feature" class="form-control" name="id_products_features">
                            <option value="">-- Choisir --</option>
                            {% for feature in list_feature %}
                                <option value="{{ feature.id_products_features }}">{{ feature.type }}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endif %}
                <div class="form-group col-lg-12">
                    <label for="new_feature">Nouvelle caractéristique</label>
                    <input type="text" name="new_id_feature" id="new_feature" class="form-control" />
                </div>
                <div class="form-group col-lg-12">
                    <label for="new_feature_value">Valeur de la caractéristique</label>
                    <input type="text" name="value" id="new_feature_value" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-themes" id="confirmModalFeatureYes">Ajouter</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>