<div class="text-left">
    <div class="row{% if breadcrumb is empty %} form-group{% endif %} border-bottom border-dark required">
        <label for="id_manufacturer" class="control-label col-lg-12 text-left mb-2">Fabricant</label>
        <div class="col-lg-12">
            <select id="id_manufacturer" class="form-control mb-3" name="id_manufacturer" required>
                <option value="">-- Choisir --</option>
                {% for fabricant in manufacturer %}
                    <option value="{{ fabricant.id_manufacturer }}"{% if objet and objet.id_manufacturer == fabricant.id_manufacturer %} selected{% endif %}>{{ fabricant.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    {% if breadcrumb %}
        <div class="row form-group border-bottom border-dark">
            <label for="inputName" class="control-label col-lg-4 margin-auto text-center">Catégorie</label>
            <div class="col-lg-8">{% include './admin/global/views/BreadcrumbViews.twig' %}</div>
        </div>
    {% endif %}
    <div class="col-lg-12 form-group required">
        <label class="control-label col-lg-12 text-left mb-2">Catégorie associées</label>
        <ul id="tree">
            {% set pos_nright = 0 %}
            {% for tree in category %}
                <li class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" id="{{ tree.id_category }}" name="id_category" value="{{ tree.id_category }}"{% if objet and objet.id_category == tree.id_category %} checked{% endif %}>
                    <label class="custom-control-label" for="{{ tree.id_category }}">{{ tree.name }}</label>

                    {% include './admin/global/action/CategoryTree.twig' %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>